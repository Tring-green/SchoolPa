<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_icon_user"
        ></ImageView>

    <AutoCompleteTextView
        android:id="@+id/userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_selector_input"
        android:drawableLeft="@drawable/user_account_icon"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user_account_icon"
        android:hint="用户名/手机号"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        />

    <AutoCompleteTextView
        android:id="@+id/passwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_selector_input"
        android:drawableLeft="@drawable/user_pwd_lock_icon"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/user_pwd_lock_icon"
        android:hint="请输入密码"
        android:minHeight="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_green_selector"
            android:text="登录"
            android:textColor="#FFFFFFFF"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_green_selector"
            android:text="注册"
            android:textColor="#FFFFFFFF"
            />
    </LinearLayout>
</LinearLayout>
